# Aeturnis Online Server Environment Configuration

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/aeturnis_dev?schema=public"

# Server Configuration
NODE_ENV="development"
PORT=3000

# Frontend Configuration
FRONTEND_URL="http://localhost:3001"
WEBSOCKET_URL="ws://localhost:3000"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Security Configuration

# Rate Limiting
RATE_LIMIT_GLOBAL_WINDOW_MINUTES=15
RATE_LIMIT_GLOBAL_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MINUTES=15
RATE_LIMIT_AUTH_MAX_REQUESTS=5
RATE_LIMIT_BANKING_MAX_REQUESTS=10
RATE_LIMIT_CHAT_MAX_REQUESTS=20
RATE_LIMIT_ENABLE_HEADERS=true
RATE_LIMIT_TRUST_PROXY=false

# CORS Configuration (automatically derived from FRONTEND_URL)
# Additional origins can be added in the security config if needed

# Content Security Policy
# CSP directives are automatically configured based on NODE_ENV
# Development: More permissive for hot reloading
# Production: Strict security policies

# HSTS Configuration
# Automatically enabled in production with:
# - 1 year max-age
# - includeSubDomains: true
# - preload: true
# Automatically disabled in development (HTTP)

# Logging Configuration
LOG_LEVEL="info"

# Redis Configuration (for distributed rate limiting - future)
# REDIS_URL="redis://localhost:6379"

# Game Configuration
GAME_VERSION="1.0.0"

# Development Tools
# Enable detailed error messages and stack traces in development
DEV_TOOLS_ENABLED=true

# Production Security Notes:
# 1. Change JWT_SECRET to a strong random value
# 2. Use HTTPS for FRONTEND_URL and WSS for WEBSOCKET_URL
# 3. Set RATE_LIMIT_TRUST_PROXY=true if behind a proxy/load balancer
# 4. Configure DATABASE_URL with production credentials
# 5. Set NODE_ENV=production to enable strict security policies
# 6. Consider setting lower rate limits for production environments